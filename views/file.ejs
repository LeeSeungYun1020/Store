<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>2. 파일 입력</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!--    jquery -->
    <script src="/node_modules/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <!--    material icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons|Material+Icons+Outlined" rel="stylesheet">
    <!--    material components -->
    <link href="/node_modules/material-components-web/dist/material-components-web.min.css" rel="stylesheet">
    <script src="/node_modules/material-components-web/dist/material-components-web.min.js"></script>

    <script src="/node_modules/dropzone/dist/min/dropzone.min.js"></script>
    <script src="javascripts/main.js"></script>

    <style>
        form {
            min-height: 200px;
            background: white;
        }

        .dropzone {
            border: 2px solid rgba(0, 0, 0, 0.3);
            margin: 16px;
            box-sizing: border-box;
            padding: 54px;
            text-align: center;
        }

        button {
            background: none;
            border: none;
            cursor: pointer;
            font-size: xx-large;
        }
    </style>
    <script>
        Dropzone.options.csvDropzone = {
            paramName: "file",
            maxFiles: 1,
            acceptedFiles: ".csv,.txt",
            accept: function(file, done) {
                if (file.name == "data.csv") {
                    alert("OK")
                    done();
                }
                else { done("Check your file."); }
            },
            complete: function () {
                //alert("업로드 완료")
            }
        }
        $(document).ready(() => {

        })
    </script>
</head>
<body>
<header></header>
<div>
    <form class="dropzone" action="/input/file" id="csvDropzone" method="post" enctype="text/plain">
        <input type="file" name="file" style="visibility: hidden" />
    </form>
    <form action="/input/file" method="post">
        <input type="file" name="kFile">
        <button type="submit">전송</button>
    </form>
</div>
<footer></footer>
</body>
</html>